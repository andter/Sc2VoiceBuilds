<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProtossBuilds" >
    
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignTop="@+id/blah"
        android:src="@drawable/pbg" />
        
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:onClick="loadBuild"
        android:src="@drawable/smallload" />
    

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:visibility="invisible"
        android:onClick="startTimer"
        android:text="Start Build" 
        android:background="@drawable/custom_button"/>
    
    <TextView
        android:id="@+id/blah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/minutesLabel"
        android:layout_alignBottom="@+id/minutesLabel"
        android:layout_toRightOf="@+id/minutesLabel"
        android:text=":"
        android:textSize="35dp" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton1"
        android:layout_alignLeft="@+id/start"
        android:layout_marginLeft="44dp"
        android:text="name"
        android:textSize="20dp"
        android:textStyle="bold" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/minutesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:text="00"
        android:textSize="35dp" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/secondsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/blah"
        android:layout_alignBottom="@+id/blah"
        android:layout_toRightOf="@+id/blah"
        android:text="00"
        android:textSize="35dp" 
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secondsLabel"
        android:layout_below="@+id/secondsLabel"
        android:background="@drawable/custom_button"
        android:onClick="stopTimer"
        android:text="Stop" 
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/blah"
        android:layout_below="@+id/blah"
        android:onClick="startTimer"
        android:text = "Start"
        android:visibility="invisible"
        android:background="@drawable/custom_button"/>
   

    <TextView
        android:id="@+id/secondsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/display"
        android:layout_marginRight="16dp"
        android:text="seconds" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_below="@+id/button2"
        android:layout_marginTop="16dp"
        android:text="Display" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/minutesDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/display"
        android:layout_alignBottom="@+id/display"
        android:layout_centerHorizontal="true"
        android:text="minutes" 
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Protoss Build:"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/button3" 
        android:visibility="invisible">
    </ListView>

</RelativeLayout>